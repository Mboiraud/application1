<%= form_for @recommendation do |f| %>
  	<%= render 'shared/error_messages', :object => f.object %>
  	<% list = current_user.allfriends + [current_user.id] %>
  	<% categories = ["film", "musique"] %>
  	<div class="field">
  		<%= f.label "destinataire" %>
    	<%= f.collection_select :receiver_id, User.where(id: list), :id, :nom %>
  	</div>
  	<div class="field">
  		<%= f.label "CatÃ©gorie" %>
    	<%= f.select :category, categories %>
  	</div>
  	<div class="field">
  		<%= f.label "Objet" %><br>
    	<%= f.text_area :item %>
  	</div>
  	<div class="field">
  		<%= f.label "message" %><br>
    	<%= f.text_area :content %>
  	</div>
  	<div class="actions">
    	<%= f.submit "Soumettre" %>
  	</div>
<% end %>
